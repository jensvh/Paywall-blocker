{
  "name": "Paywall-blocker",
  "version": "1.2",
  "version_name": "1.2",
  "description": "Remove paywall from newsletters",
  "manifest_version": 3,
  "permissions": [
	"declarativeNetRequest" // For request blocking
  ],

  "content_security_policy": {},
  "host_permissions": [
    "<all_urls>"
  ],
  
  // Blocking requests
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "requests_to_block_1",
      "enabled": true,
      "path": "requests_to_block.json"
    }]
  }
}